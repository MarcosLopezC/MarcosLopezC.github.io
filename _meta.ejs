<%-
	(function() {
		if (typeof meta === "undefined") {
			return;
		}

		let output = "";

		let writeMeta = function(attributes) {
			output += "<meta ";

			Object
				.keys(attributes)
				.forEach(key => {
					output += `${key}="${attributes[key]}"`;
				});

			output += ">";
		};

		if (typeof title === "string") {
			writeMeta({
				name: "og:title",
				content: title
			});
		}

		if (meta.description) {
			writeMeta({
				name: "description",
				content: meta.description
			});
			writeMeta({
				property: "og:description",
				cotent: meta.description
			});
		}

		if (meta.image) {
			writeMeta({
				property: "og:image",
				content: meta.image
			});
		}

		writeMeta({
			name: "og:locale",
			content: "en_US"
		});

		return output;
	}());
%>